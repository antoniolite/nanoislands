// FIXME: move all those stuff to stylobate-islands
.nb-select
  &.nb-button
    text-align: left // fixes #345

  if ie
    & ._nb-button-content
      display: none !important

._nb-select-fallback
  if !ie
    display: none
  if ie
    display: inline-block

.nb-select ._nb-select-arrow
  skin: v3-icon_dropdown

._nb-small-normal-select ._nb-select-arrow
  skin: v3-icon_dropdown small

.nb-large-select-dropdown ._nb-select-group-item > ._nb-select-a:after
  skin: v3-icon_dropdown selecty
  content: ""
  top: 0.65em

._nb-select-dropdown ._nb-select-group-item > ._nb-select-a:after
  skin: v3-icon_dropdown selecty small
  content: ""
  top: 0.55em


.nb-select-dropdown .ui-menu
  skin: v3-isle (_type fly)
  skin: v3-menu _padded
  position: absolute
  z-index: 10000

  reset: ul
  list-style-type: none // move to reset

  // Fixing incorrect width on auto scroll
  &[style*='max-height']
    overflow-y: scroll !important

._nb-select-item
  reset: li

._nb-select-a
  skin: v3-menu__item _nested (_checked '.is-selected &') _ellipsis

._nb-select-separator
  skin: v3-menu__separator _padded

._nb-select-popup ._nb-popup-content
  overflow-x: hidden
  overflow-y: auto
  padding: 0

._nb-large-select-dropdown,
._nb-large-pseudo-select-dropdown,
._nb-large-action-select-dropdown,
._nb-large-dark-select-dropdown

  & .ui-menu
    skin: v3-menu_ (_size large) (_padded '') (_ellipsis '')

  & ._nb-select-item ._nb-select-a
    skin: v3-menu__item _nested (_size large) (_checked '.is-selected &') (_hover '') (_ellipsis '')

  & ._nb-select-item.is-selected ._nb-select-a
    // Or just do `height: 17px` on `:before`?
    skin: v3-menu__item_checked (_size large)

.nb-select-dropdown .ui-state-focus
  skin: menu__item_hover

// FIXME: we need to use `nb-is-disabled` here
._nb-small-normal-select .ui-menu-item_disabled_yes
  kind: disabled 0.6 (__nested '')

._nb-select-seperator-item
  skin: v3-menu__separator _padded

._nb-is-disabled._nb-select-button:focus:after
  box-shadow: none
